R="\033[31m" # Red
N="\033[1;37m" # White
G="\033[32m" # Green
O="\033[1;33m" # Orange
B="\033[1;34m" #Blue
CE="\033[0m"

printf '\033]2;Arissploit Framework\a'

if [[ -d ~/arissploit ]]
then
{
cd ~/arissploit
mkdir etc/.disabled
mv modules/zip_cracker.py etc/.disabled
mv etc/zip_cracker.py modules
cp etc/.disabled/zip_cracker.py etc
rm -rf etc/.disabled
mkdir etc/.disabled
mv modules/rar_cracker.py etc/.disabled
mv etc/rar_cracker.py modules
cp etc/.disabled/rar_cracker.py etc
rm -rf etc/.disabled
mkdir etc/.disabled
mv modules/wordlist_gen.py etc/.disabled
mv etc/wordlist_gen.py modules
cp etc/.disabled/wordlist_gen.py etc
rm -rf etc/.disabled
} &> /dev/null
chmod +x arissploit
./arissploit
{
cd ~/arissploit
mkdir etc/.disabled
mv modules/zip_cracker.py etc/.disabled
mv etc/zip_cracker.py modules
cp etc/.disabled/zip_cracker.py etc
rm -rf etc/.disabled
mkdir etc/.disabled
mv modules/rar_cracker.py etc/.disabled
mv etc/rar_cracker.py modules
cp etc/.disabled/rar_cracker.py etc
rm -rf etc/.disabled
mkdir etc/.disabled
mv modules/wordlist_gen.py etc/.disabled
mv etc/wordlist_gen.py modules
cp etc/.disabled/wordlist_gen.py etc
rm -rf etc/.disabled
} &> /dev/null
else
{
ASESR="$( curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
} &> /dev/null
if [[ "$ASESR" != "" ]]
then 
cd ~
{
git clone https://github.com/entynetproject/arissploit.git
cd $OLDPWD
cd ~/arissploit
mkdir etc/.disabled
mv modules/zip_cracker.py etc/.disabled
mv etc/zip_cracker.py modules
cp etc/.disabled/zip_cracker.py etc
rm -rf etc/.disabled
mkdir etc/.disabled
mv modules/rar_cracker.py etc/.disabled
mv etc/rar_cracker.py modules
cp etc/.disabled/rar_cracker.py etc
rm -rf etc/.disabled
mkdir etc/.disabled
mv modules/wordlist_gen.py etc/.disabled
mv etc/wordlist_gen.py modules
cp etc/.disabled/wordlist_gen.py etc
rm -rf etc/.disabled
} &> /dev/null
chmod +x arissploit
./arissploit
{
cd ~/arissploit
mkdir etc/.disabled
mv modules/zip_cracker.py etc/.disabled
mv etc/zip_cracker.py modules
cp etc/.disabled/zip_cracker.py etc
rm -rf etc/.disabled
mkdir etc/.disabled
mv modules/rar_cracker.py etc/.disabled
mv etc/rar_cracker.py modules
cp etc/.disabled/rar_cracker.py etc
rm -rf etc/.disabled
mkdir etc/.disabled
mv modules/wordlist_gen.py etc/.disabled
mv etc/wordlist_gen.py modules
cp etc/.disabled/wordlist_gen.py etc
rm -rf etc/.disabled
} &> /dev/null
else
cd ~
sleep 1
exit
fi
fi
