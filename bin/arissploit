printf '\033]2;Arissploit Framework\a'

G="\033[1;34m[*] \033[0m"
S="\033[1;32m[+] \033[0m"
E="\033[1;31m[-] \033[0m"

if [[ -d ~/arissploit ]]
then
{
cd ~/arissploit
mkdir etc/.disabled
mv modules/zip_cracker.py etc/.disabled
mv etc/modules/zip_cracker.py modules
cp etc/.disabled/zip_cracker.py etc/modules
rm -rf etc/.disabled
mkdir etc/.disabled
mv modules/rar_cracker.py etc/.disabled
mv etc/modules/rar_cracker.py modules
cp etc/.disabled/rar_cracker.py etc/modules
rm -rf etc/.disabled
mkdir etc/.disabled
mv core/cmethods.py etc/.disabled
mv etc/core/cmethods.py core
cp etc/.disabled/cmethods.py etc/core
rm -rf etc/.disabled
} &> /dev/null
chmod +x arissploit
./arissploit
{
if [[ -f ~/arissploit/.updated ]]
then
rm ~/arissploit/.updated
else
cd ~/arissploit
mkdir etc/.disabled
mv modules/zip_cracker.py etc/.disabled
mv etc/modules/zip_cracker.py modules
cp etc/.disabled/zip_cracker.py etc/modules
rm -rf etc/.disabled
mkdir etc/.disabled
mv modules/rar_cracker.py etc/.disabled
mv etc/modules/rar_cracker.py modules
cp etc/.disabled/rar_cracker.py etc/modules
rm -rf etc/.disabled
mkdir etc/.disabled
mv core/cmethods.py etc/.disabled
mv etc/core/cmethods.py core
cp etc/.disabled/cmethods.py etc/core
rm -rf etc/.disabled
fi
} &> /dev/null
else
{
ASESR="$(ping -c 1 -q www.google.com >&/dev/null; echo $?)"
} &> /dev/null
if [[ "$ASESR" = 0 ]]
then 
cd ~
{
git clone https://github.com/entynetproject/arissploit.git
cd $OLDPWD
cd ~/arissploit
mkdir etc/.disabled
mv modules/zip_cracker.py etc/.disabled
mv etc/modules/zip_cracker.py modules
cp etc/.disabled/zip_cracker.py etc/modules
rm -rf etc/.disabled
mkdir etc/.disabled
mv modules/rar_cracker.py etc/.disabled
mv etc/modules/rar_cracker.py modules
cp etc/.disabled/rar_cracker.py etc/modules
rm -rf etc/.disabled
mkdir etc/.disabled
mv core/cmethods.py etc/.disabled
mv etc/core/cmethods.py core
cp etc/.disabled/cmethods.py etc/core
rm -rf etc/.disabled
} &> /dev/null
chmod +x arissploit
./arissploit
{
if [[ -f ~/arissploit/.updated ]]
then
rm ~/arissploit/.updated
else
cd ~/arissploit
mkdir etc/.disabled
mv modules/zip_cracker.py etc/.disabled
mv etc/modules/zip_cracker.py modules
cp etc/.disabled/zip_cracker.py etc/modules
rm -rf etc/.disabled
mkdir etc/.disabled
mv modules/rar_cracker.py etc/.disabled
mv etc/modules/rar_cracker.py modules
cp etc/.disabled/rar_cracker.py etc/modules
rm -rf etc/.disabled
mkdir etc/.disabled
mv core/cmethods.py etc/.disabled
mv etc/core/cmethods.py core
cp etc/.disabled/cmethods.py etc/core
rm -rf etc/.disabled
fi
} &> /dev/null
else
cd ~
sleep 1
exit
fi
fi
